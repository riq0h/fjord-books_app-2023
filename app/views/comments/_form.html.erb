<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= t('views.common.validation_error', errors: i18n_error_count(book.errors.count), name: Comment.model_name.human.downcase) %>:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :commentable_type, value: @comment.commentable_type %>
  <%= form.hidden_field :commentable_id, value: @comment.commentable_id %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
