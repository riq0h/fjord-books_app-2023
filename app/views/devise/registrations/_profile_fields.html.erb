<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %><br />
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <% if resource.avatar.attached? %>
    <p><%= image_tag resource.avatar.variant(resize_to_limit: [300, 300]) %></p>
  <% end %>
</div>
