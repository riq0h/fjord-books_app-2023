<p><%= t('views.common.hello', name: @email) %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('users.mailer.email_changed.message', email: @resource.unconfirmed_email) %>.</p>
<% else %>
  <p><%= t('users.mailer.email_changed.message_unconfirmed', email: @resource.email) %>.</p>
<% end %>
