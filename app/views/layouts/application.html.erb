<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">

    <p class="log">
      <% if user_signed_in? %>
        <%= t('devise.shared.links.sign_in_with_provider_strong_html', provider: current_user.email) %>
        <%= link_to t('devise.registrations.edit.title', resource: t('activerecord.models.user')), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('devise.sessions.new.sign_out'), destroy_user_session_path, method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'navbar-link' %>
      <% else %>
        <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
