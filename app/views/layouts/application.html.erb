  </head>

  <body class="<%= params[:action] %>">

    <p class="log">
      <% if user_signed_in? %>
        <%= t('users.shared.links.sign_in_with_provider_strong_html', provider: current_user.email) %>
        <%= link_to t('users.registrations.edit.title', resource: t('activerecord.models.user')), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('users.sessions.new.sign_out'), destroy_user_session_path, method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'navbar-link' %>
      <% else %>
        <%= link_to t('users.registrations.new.sign_up'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('users.sessions.new.sign_in'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
